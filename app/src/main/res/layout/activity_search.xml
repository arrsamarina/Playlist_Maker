<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="?attr/colorSecondaryVariant"
    tools:context=".SearchActivity"
    android:id="@+id/container">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/GeneralTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="@dimen/big_image_button"
            android:layout_height="@dimen/big_image_button"
            android:backgroundTint="?attr/colorSecondaryVariant"
            android:src="@drawable/ic_arrowback"
            android:contentDescription="@string/back_description"
            android:adjustViewBounds="true"
            app:tint="?attr/colorPrimaryVariant" />

        <TextView
            style="@style/GeneralTitleText"
            android:text="@string/search"
            android:paddingStart="@dimen/linear_padding"
            android:textColor="?attr/colorOnPrimary" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_margin"
        android:background="@drawable/ic_search_background"
        android:orientation="horizontal"
        android:padding="@dimen/linear_padding"
        app:cornerRadius="@dimen/mini_button_corner_radius"
        style="@style/RoundCorner">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            android:contentDescription="@string/search"
            app:tint="?attr/colorOnPrimaryFixedVariant" />

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/search"
            android:textColorHint="?attr/colorOnSecondaryFixedVariant"
            android:textColor="?attr/colorOnPrimary"
            android:maxLines="1"
            android:inputType="text"
            android:background="@color/grey"
            android:paddingStart="@dimen/little_padding"
            android:paddingEnd="@dimen/little_padding"
            />

        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
